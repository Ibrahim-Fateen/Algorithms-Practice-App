<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= @user.new_record? ? 'Create Admin User' : 'Edit Admin User' %></h1>

  <%= form_with(model: [:admin, @user], local: true, class: 'space-y-6') do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: 'block mb-2' %>
      <%= form.email_field :email, class: 'w-full px-3 py-2 border rounded' %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: 'block mb-2' %>
      <%= form.password_field :password, class: 'w-full px-3 py-2 border rounded' %>
    </div>

    <div class="mb-4">
      <%= form.label :password_confirmation, class: 'block mb-2' %>
      <%= form.password_field :password_confirmation, class: 'w-full px-3 py-2 border rounded' %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Admin User', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
    </div>
  <% end %>
</div>