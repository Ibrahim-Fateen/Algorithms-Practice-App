<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Manage Admin Users</h1>

  <%= link_to 'Add New Admin', new_admin_user_path, class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded mb-4 hover:bg-blue-600' %>

  <table class="w-full border-collapse">
    <thead>
    <tr class="bg-gray-100">
      <th class="border p-2 text-left">Email</th>
      <th class="border p-2 text-left">Created At</th>
      <th class="border p-2 text-left">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.select(&:admin?).each do |user| %>
      <tr class="hover:bg-gray-50">
        <td class="border p-2"><%= user.email %></td>
        <td class="border p-2"><%= user.created_at.strftime("%B %d, %Y") %></td>
        <td class="border p-2">
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'text-yellow-600 hover:text-yellow-800 mr-2' %>
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>