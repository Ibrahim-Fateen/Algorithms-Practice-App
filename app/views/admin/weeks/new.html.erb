<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= @week.new_record? ? 'Create Week' : 'Edit Week' %></h1>

  <%= form_with(model: [:admin, @week], local: true, class: 'space-y-6') do |form| %>
    <div class="mb-4">
      <%= form.label :number, class: 'block mb-2' %>
      <%= form.number_field :number, class: 'w-full px-3 py-2 border rounded' %>
    </div>

    <div class="mb-4">
      <%= form.label :theme, class: 'block mb-2' %>
      <%= form.text_field :theme, class: 'w-full px-3 py-2 border rounded' %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Week', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
    </div>
  <% end %>
</div>