<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Manage Problems</h1>

  <%= link_to 'Add New Problem', new_admin_problem_path, class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded mb-4 hover:bg-blue-600' %>

  <table class="w-full border-collapse">
    <thead>
    <tr class="bg-gray-100">
      <th class="border p-2 text-left">Title</th>
      <th class="border p-2 text-left">Difficulty</th>
      <th class="border p-2 text-left">Week</th>
      <th class="border p-2 text-left">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @problems.each do |problem| %>
      <tr class="hover:bg-gray-50">
        <td class="border p-2"><%= problem.title %></td>
        <td class="border p-2"><%= problem.difficulty %></td>
        <td class="border p-2">Week <%= problem.week.number %></td>
        <td class="border p-2">
          <%= link_to 'Edit', edit_admin_problem_path(problem), class: 'text-yellow-600 hover:text-yellow-800 mr-2' %>
          <%= link_to 'Delete', admin_problem_path(problem), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>